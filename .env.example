# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# Oracle Database Configuration
ORACLE_USER=your_username
ORACLE_PASSWORD=your_password
ORACLE_DSN=localhost:1521/?sid=your_sid
# Or for service name connection:
# ORACLE_DSN=localhost:1521/?service_name=your_service

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_INTERVAL=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090